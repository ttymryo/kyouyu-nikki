<div class="container-fluid">
  <div class="row">
    <div class="col-lg-10 col-md-12 mx-auto">
      <div class="card-list-container">
        <%= render 'public/homes/index', diary: @diary %>
        <div class="text-right">
          <%= link_to '編集する', edit_admin_diary_path(@diary), data: {"turbolinks" => false} %>
          <%= link_to '削除', admin_diary_path(@diary), method: :delete, data: {confirm: '本当に削除しますか？'} %>
        </div>
        <div class="col-12">
          <% @diary.comments.each do |comment| %>
            <div class="row p-0">
              <div class="col-1 p-0">
                <%= link_to admin_user_path(comment.user) do %>
                  <%= image_tag comment.user.get_image(50,50), class: 'rounded-circle' %>
                <% end %>
              </div>
              <div class="col-11 row">
                <div class="col-12">
                  <div class="row">
                    <div class="col-10">
                      <%= comment.user.name %> @<%= comment.user.name_id %>
                    </div>
                    <div class="col-2 ml-auto">
                      <% if comment.user == current_user %>
                        <%= link_to '削除', admin_diary_comment_path(comment.diary.id, comment.id), method: :delete, class: 'ml-2' %>
                      <% end %>
                    </div>
                    <div class="col-12 pb-2">
                      <%= comment.body %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>