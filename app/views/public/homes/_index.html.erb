<%= link_to user_diary_path(diary.user.name_id,diary), class: 'text-secondary text-decoration-none' do %>
  <div class="card card-index w-80 mx-auto mt-4 <% if diary.emotion == 'unhappy'%>border-primary<% elsif diary.emotion == 'happy' %>border-danger<% else %>border-secondary<% end %>" >
    <div class="card-body">
      <diV class="row">
        <div class="col-lg-1 col-md-2 col-sm-2 pr-1">
          <%= image_tag diary.user.get_image(50, 50), class: 'rounded-circle' %>
        </div>
        <div class="col-lg-11 col-md-10 col-sm-10 row">
          <div class="col-md-9 col-sm-12">
            <strong><%= diary.user.name %></strong> @<%= diary.user.name_id %>
          </div>
          <div class="col-md-3 col-sm-12 text-right p-0">
            <%= diary.created_at.strftime('%Y/%m/%d') %>
          </div>
          <div class="col-12 mt-3 mb-4">
            <%= diary.body.truncate(200) %>
          </div>
          <div class="col-12 row p-0 m-0">
            <div class="col-4">
            </div>
            <div class="col-2 text-right">
              <i class="far fa-comment mr-1"></i><%= diary.comments.count %>
            </div>
            <div class="col-6 p-0">
              <p class="text-right m-0">コメント：<%= diary.add_commented_i18n %> | 公開設定：<%= diary.public_range_i18n %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="favorite_btn_<%= diary.id %> text-secondary favorite" style="width: 30px">
  <%= render 'public/favorites/favorite', diary: diary %>
</div>