<h2>プロフィール設定</h2>
<%= form_with model: @user, url: user_path(@user.name_id), method: :patch do |f| %>
  <%= render "public/shared/error_messages", resource: @user %>
  <div>
    <%= image_tag @user.get_image(100,100) %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :name_id, '名前' %><br />
    <%= f.text_field :name_id, autofocus: true, autocomplete: "name_id" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>

<% end %>
